{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "nuxt": true,
  "entry": [
    "src/app/**/*.vue",
    "src/shared/**/*.{ts,vue}",
    "src/modules/*/api.ts",
    "scripts/**/*.sh"
  ],
  "project": [
    "src/**/*.{ts,vue,js}",
    "eslint-rules/**/*.{ts,js}"
  ],
  "ignore": [
    "**/*.d.ts",
    ".nuxt/**",
    "dist/**",
    "tests/**",
    "src/modules/*/components/**",
    "src/modules/*/composables/**",
    "src/modules/*/internal/**",
    "src/modules/*/store.ts",
    "src/modules/*/events.ts"
  ],
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  },
  "ignoreDependencies": [
    "vue-router",
    "@iconify-json/lucide",
    "@unocss/preset-typography",
    "lint-staged",
    "ts-node"
  ],
  "ignoreExportsUsedInFile": true,
  "ignoreUnresolved": ["^#.+"]
}
